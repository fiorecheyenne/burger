<div class="container">

    <div class="jumbotron">
        <h1 id="color-override">BURGER BUFFET</h1><img src="/assets/images/heart.gif" height="200" align="right">
        <p id="color-override">Make great burgers, eat great burgers!</p>
        <br>
        <h2 id="color-override">Create a Masterpiece</h2>

        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger" id="color-override">New Burger:</label>
                    <input type="text" id="newburger" name="burger">

                    <button type="submit" class="btn btn-outline-dark" id="addburger"><span
                            class="fa fa-thumbs-up"></span></button>
                </div>
            </form>
        </panel>

    </div>

    <div class="row">

        <div class="col-sm-6">
            <div class="panel panel-default">

                <div class="panel-heading" id="lefthead"><strong>Try these burgers!</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        <span><strong> <img src="/assets/images/brugerdude.gif" height="50px" width="50px">{{this.id}} -
                                {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-outline-dark" id="eatbutton"
                            data-id="{{this.id}}" data-newDevoured="{{devour}}"><span
                                class="fa fa-cutlery"></span></button>

                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>




        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="righthead"><strong>These Burgers have been eaten</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <img src="/assets/images/holdontobuns.gif" height="50px" width="50px">
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="btn btn-outline-danger trashburger" id="trashbutton"
                            data-id="{{this.id}}" data-newDevoured="{{devour}}"><span
                                class="fa fa-trash"></span></button>

                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>